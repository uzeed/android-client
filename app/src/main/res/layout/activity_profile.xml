<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_header"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_fondo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/fondo_ver_mas"
            />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/girl_face"
            android:layout_centerHorizontal="true"
            android:elevation="1dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="4dp"
            app:civ_border_overlay="true"
            app:civ_circle_background_color="@color/transparent"
            app:civ_fill_color="@color/transparent"
            android:layout_marginTop="-60dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_logo_blanco"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_blanco"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/txtUserProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="60dp"
                        android:text="Francisca Sol"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-light"

                     />
                    <TextView
                        android:id="@+id/txtCategoriaProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masajista Profesional"
                        android:textSize="12dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-light"
                        />
                    <Button
                        android:id="@+id/btnProfileEnviar"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Enviar Mensaje"
                        android:background="@drawable/element_outline"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"

                        />
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_marginTop="3dp"
                                android:layout_gravity="center_horizontal"
                                >
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_horizontal"
                                    >
                                    <ImageView
                                        android:id="@+id/imgProfile1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:adjustViewBounds="true"
                                        android:layout_gravity="center_horizontal"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_horizontal"
                                >
                                    <ImageView
                                        android:id="@+id/imgProfile2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_gravity="center_horizontal"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_horizontal"
                                    >
                                    <ImageView
                                        android:id="@+id/imgProfile3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_gravity="center_horizontal"
                                        android:adjustViewBounds="true"
                                        />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center"
                                >
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_horizontal"
                                >
                                    <ImageView
                                        android:id="@+id/imgProfile4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_gravity="center_horizontal"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_horizontal"
                                >
                                    <ImageView
                                        android:id="@+id/imgProfile5"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_gravity="center_horizontal"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_horizontal"
                                    >
                                    <ImageView
                                        android:id="@+id/imgProfile6"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_gravity="center_horizontal"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center"
                                >
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_horizontal"
                                    >
                                    <ImageView
                                        android:id="@+id/imgProfile7"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_gravity="center_horizontal"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_horizontal"
                                    >
                                    <ImageView
                                        android:id="@+id/imgProfile8"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_gravity="center_horizontal"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_horizontal"
                                    >
                                    <ImageView
                                        android:id="@+id/imgProfile9"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_gravity="center_horizontal"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" />
</RelativeLayout>