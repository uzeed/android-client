<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >
    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/favoriteCardView"
        app:cardUseCompatPadding="true" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/favorite_relativeLayouData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <ImageView
                    android:id="@+id/favorite_profile_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/portada"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                     />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp">
                <TextView
                    android:id="@+id/txt_favorite_Alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alias"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/txt_favorite_Categorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categorias"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/ratb_Calificacion_Favorite"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="1"
                android:stepSize="1"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:scaleX=".9"
                android:scaleY=".9"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/favorite_relativeLayouButtonsLink"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <LinearLayout
                android:id="@+id/menuFavoriteLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_favorite_VerPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_press"
                        android:text="@string/btnPerfil"
                        android:textColor="@color/LinkButton"
                        android:textSize="10dp"
                    />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_favorite_EnviarMensaje"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/background_boton"
                        android:text="@string/btnEnviarMensaje"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                     />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_EsotraActividad"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_press"
                        android:text="@string/btnEnviarMensaje"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>