<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_Mensajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_item_mensaje"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/girl_face"
                android:layout_centerHorizontal="true"
                android:elevation="1dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp"
                app:civ_border_overlay="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                />
            <LinearLayout
                android:id="@+id/ll_MensajeRecibido"
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/out_mensaje"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_HoraMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Pablo 12:00 am"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tv_Mensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Prueba de Mensaje de Salida mas largo que lo normal que sobrepasa la pantalla"
                    android:maxWidth="250sp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif-light"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_initial_letter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="P"
                android:background="@drawable/circle_mensaje"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
