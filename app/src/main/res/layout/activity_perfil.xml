<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_titulos">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="@string/informacion_profesional"
            style="@style/TextAppearance.AppCompat.Small"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/ll_titulos">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="20dp"
                android:id="@+id/ll_central">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/iv_favorite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="false"
                        android:background="@color/transparent"
                        android:cropToPadding="false"
                        android:gravity="right"
                        android:onClick="onClick"
                        android:scaleType="fitEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            >
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/fancy_circle"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:id="@+id/txtUbicacionperfil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SANTIAGO, CHILE"
                                android:textSize="10dp"
                                android:fontFamily="sans-serif-light"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="2dp"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALIFICACION"
                            android:textColor="@color/colorAccent"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-light"
                            android:textSize="12dp"/>
                        <RatingBar
                            android:id="@+id/ratb_Calificacion"
                            style="@style/PerfilRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:isIndicator="true"
                            android:layout_marginLeft="10dp"
                            android:numStars="5"
                            android:stepSize="1"
                            android:rating="1"
                            android:layout_gravity="right"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right">
                            <Button
                                android:id="@+id/btn_VerFotos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ver_fotos"
                                android:textSize="9sp"
                                android:background="@color/transparent"
                                android:textColor="@color/white"
                                android:paddingLeft="0dp"

                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="31dp"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:src="@drawable/button_ver_fotos" />
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                            <ImageView
                                android:id="@+id/perfil_photo"
                                android:layout_width="300dp"
                                android:layout_height="200dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/girl_face"
                                />

                            <ImageView
                                android:src="@drawable/image_corner_radius"
                                android:layout_width="300dp"
                                android:layout_height="200dp"
                                android:background="@color/transparent"

                                />

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_Nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Francisca Sol"
                        android:fontFamily="sans-serif-light"
                        android:textSize="26sp"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/txt_categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Masajista Profesional"
                        android:fontFamily="sans-serif-light"
                        style="@style/TextAppearance.AppCompat.Small"/>
                    <TextView
                        android:id="@+id/tv_nacionalidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Argentina"
                        android:fontFamily="sans-serif-light"
                        style="@style/TextAppearance.AppCompat.Small"/>

                    <TextView
                        android:id="@+id/tv_telefono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text=""
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/tv_departamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Tiene departamento propio"
                        android:fontFamily="sans-serif-light"
                        style="@style/TextAppearance.AppCompat.Small"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">
                        <!--
                        <ImageView
                            android:id="@+id/iv_checkmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/checkmark"
                            android:paddingTop="5dp"/>
                            -->
                        <TextView
                            android:id="@+id/txt_estado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="online"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/online"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_Informacion"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-light"
                        android:text="Hola soy Francisca, educada cariñosa, complaciente, estaré en Santiago por poco tiempo si deseas pasar un rato de buen trato"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_central"
                android:background="@color/white"
                >

                <Button
                    android:id="@+id/btn_Send_Message"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/btnEnviarMensaje"
                    android:textColor="@color/white"
                    android:background="@drawable/ripple"
                    android:textSize="13dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressbar_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>