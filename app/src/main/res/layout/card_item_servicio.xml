<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serviciosCardView"
        app:cardUseCompatPadding="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/servicios_relativeLayouData"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">
                <ImageView
                    android:id="@+id/servicios_profile_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/portada"
                    android:layout_centerHorizontal="true"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_servicios_Alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alias"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/txt_servicios_Categorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Categorias"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15">
                <LinearLayout
                    android:id="@+id/linearLayoutEstadoServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_servicios_Fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:text="01/01/2019 02:00"
                        android:textColor="@color/LinkButton"
                        android:textStyle="bold"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/txt_servicios_Estado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Pendiente de CalificaciÃ³n"
                        android:textColor="@color/LinkButton"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">
                <LinearLayout
                    android:id="@+id/menuLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    >
                <LinearLayout
                    android:id="@+id/ll_111"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">
                    <Button
                        android:id="@+id/btn_Servicios_VerPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/button_press"
                        android:text="@string/btnPerfil"
                        android:textColor="@color/LinkButton"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_112"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4">

                    <Button
                        android:id="@+id/btn_Servicios_EnviarMensaje"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/ripple"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:text="@string/btnEnviarMensaje"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_113"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_Servicios_Calificar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_press"
                        android:text="@string/btnCalificar"
                        android:textColor="@color/LinkButton"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        />
                    <Button
                        android:id="@+id/btn_Servicios_Cancelar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_press"
                        android:text="@string/btnCancelar"
                        android:textColor="@color/LinkButton"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:visibility="gone"
                        />
                </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <ProgressBar
        android:id="@+id/servicios_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</FrameLayout>