<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CalificarActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/fondo"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:id="@+id/iv_fondo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CALIFICACIÓN"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textSize="13dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_Calificar_online"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="✓ online"
                    android:textSize="14dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/online"/>
                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:id="@+id/thumbnail_card"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:id="@+id/calificar_profile_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/girl_face"
                        />
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/txt_Calificar_Nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Francisca Sol"
                    android:textSize="28dp"
                    android:fontFamily="@font/roboto_light"
                    />
                <TextView
                    android:id="@+id/txt_Calificar_Categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masajista Profesional"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-thin"/>
                <TextView
                    android:id="@+id/txt_texto_calificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Califica tu experiencia con Francisca"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorCorazones"
                    android:textAllCaps="true"
                    />
                <RatingBar
                    android:id="@+id/ratb_Calificar_Calificacion"
                    style="@style/MyRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="1"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center|center_vertical|center_horizontal"
                    />
                <TextView
                    android:id="@+id/txt_texto_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Donde 1 corazón es Malo y 5 es Excelente"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:layout_marginTop="-10dp"
                    />
                <Button
                    android:id="@+id/btn_Calificar_Profesional"
                    style="@style/Widget.AppCompat.Button.Colored"

                    android:background="@drawable/ripple"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="CALIFICAR"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    />
                <EditText
                    android:id="@+id/edt_comentario_calificacion"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/style_border_edittext"
                    android:textColor="@color/LinkButton"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="top|left"
                    />
            </LinearLayout>
        </ScrollView>
        </LinearLayout>
        </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar_Calificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>